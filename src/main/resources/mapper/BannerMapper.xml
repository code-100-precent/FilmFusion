<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cxdproject.coder.mapper.BannerMapper">

    <resultMap id="BaseResultMap" type="cn.cxdproject.coder.model.entity.Banner">
        <id column="id" property="id" />
        <result column="image_name" property="imageName" />
        <result column="image_url" property="imageUrl" />
        <result column="target_module" property="targetModule" />
        <result column="status" property="status" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="sort" property="sort" />
    </resultMap>

    <sql id="Base_Column_List">
            `id`,
            `image_name`,
            `image_url`,
            `target_module`,
            `status`,
            `deleted`,
            `created_at`,
            `updated_at`,
            `sort`
    </sql>

    <select id="getPage" resultType="cn.cxdproject.coder.model.entity.Banner">
        SELECT a.id, a.image_url, a.image_name, a.target_module, a.status, a.sort
        FROM fi_banner a
        INNER JOIN (
        SELECT id
        FROM fi_banner
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{size}
        ) tmp ON a.id = tmp.id
    </select>

</mapper>
