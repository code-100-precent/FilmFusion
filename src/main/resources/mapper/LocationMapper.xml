<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cxdproject.coder.mapper.LocationMapper">

    <resultMap id="BaseResultMap" type="cn.cxdproject.coder.model.entity.Location">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="type" property="type" />
        <result column="status" property="status" />
        <result column="location_description" property="locationDescription" />
        <result column="location_principal_phone" property="locationPrincipalPhone" />
        <result column="location_principal_name" property="locationPrincipalName" />
        <result column="gov_principal_phone" property="govPrincipalPhone" />
        <result column="gov_principal_name" property="govPrincipalName" />
        <result column="address" property="address" />
        <result column="price" property="price" />
        <result column="user_id" property="userId" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="image" property="image" />
        <result column="thumb_image" property="thumbImage"/>
        <result column="longitude" property="longitude"/>
        <result column="latitude" property="latitude"/>
        <result column="drama_id" property="dramaId"/>
    </resultMap>

    <sql id="Base_Column_List">
            `id`,
            `name`,
            `type`,
            `status`,
            `location_description`,
            `location_principal_phone`,
            `location_principal_name`,
            `gov_principal_phone`,
            `gov_principal_name`,
            `contact_name`,
            `address`,
            `price`,
            `user_id`,
            `deleted`,
            `created_at`,
            `updated_at`,
            `image`,
            `thumb_image`,
            `longitude`,
            `latitude`,
            `drama_id`
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT *
        FROM fi_locations
        WHERE id = #{id}
        AND deleted = 0
    </select>

    <select id="selectIds" resultType="long">
        SELECT id
        FROM fi_locations
        <where>
            deleted = 0
            AND status = 1
            <!-- 模糊搜索 -->
            <if test="keyword != null and keyword != ''">
                AND (
                name LIKE CONCAT('%', #{keyword}, '%')
                OR location_description LIKE CONCAT('%', #{keyword}, '%')
                OR type LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>

            <if test="lastId != null">
                AND id > #{lastId}
            </if>
        </where>
        ORDER BY created_at ASC
        LIMIT #{size}
    </select>

    <select id="getAdminPage" resultMap="BaseResultMap">
        SELECT *
        FROM fi_locations
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (
            name LIKE CONCAT('%', #{keyword}, '%')
            OR location_description LIKE CONCAT('%', #{keyword}, '%')
            OR type LIKE CONCAT('%', #{keyword}, '%')
            )
        </if>
        ORDER BY created_at ASC
        LIMIT #{offset}, #{size}
    </select>

    <select id="selectLatest10" resultMap="BaseResultMap">
        SELECT *
        FROM fi_locations
        WHERE deleted = 0
          AND status = 1
        ORDER BY created_at DESC
            LIMIT 10
    </select>


    <update id="updateLocation">
        UPDATE fi_locations
        <set>
            <if test="dto.name != null and dto.name != ''">
                name = #{dto.name},
            </if>
            <if test="dto.type != null and dto.type != ''">
                type = #{dto.type},
            </if>
            <if test="dto.status != null">
                status = #{dto.status},
            </if>
            <if test="dto.locationDescription != null and dto.locationDescription != ''">
                location_description = #{dto.locationDescription},
            </if>
            <if test="dto.locationPrincipalName != null and dto.locationPrincipalName != ''">
                location_principal_name = #{dto.locationPrincipalName},
            </if>
            <if test="dto.locationPrincipalPhone != null and dto.locationPrincipalPhone != ''">
                location_principal_phone = #{dto.locationPrincipalPhone},
            </if>
            <if test="dto.govPrincipalName != null and dto.govPrincipalName != ''">
                gov_principal_name = #{dto.govPrincipalName},
            </if>
            <if test="dto.govPrincipalPhone != null and dto.govPrincipalPhone != ''">
                gov_principal_phone = #{dto.govPrincipalPhone},
            </if>
            <if test="dto.address != null and dto.address != ''">
                address = #{dto.address},
            </if>
            <if test="dto.price != null and dto.price != ''">
                price = #{dto.price},
            </if>
            <if test="dto.image != null and dto.image != ''">
                image = #{dto.image},
            </if>
            <if test="dto.thumbImage != null and dto.thumbImage != ''">
                thumb_image = #{dto.thumbImage},
            </if>
            <if test="dto.longitude != null and dto.longitude != ''">
                longitude = #{dto.longitude},
            </if>
            <if test="dto.latitude != null and dto.latitude != ''">
                latitude = #{dto.latitude},
            </if>
            <if test="dto.dramaId != null and dto.dramaId != ''">
                drama_id = #{dto.dramaId},
            </if>
        </set>
        WHERE id = #{id}
        AND deleted = 0
    </update>

    <select id="getTotal" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM fi_locations
        WHERE deleted = 0
        AND status = 1
        <if test="keyword != null and keyword != ''">
            AND (
            name LIKE CONCAT('%', #{keyword}, '%')
            OR location_description LIKE CONCAT('%', #{keyword}, '%')
            OR type LIKE CONCAT('%', #{keyword}, '%')
            )
        </if>
    </select>

    <select id="selectAll" resultType="cn.cxdproject.coder.model.entity.Location">
        SELECT *
        FROM fi_locations
        WHERE deleted = 0
          AND status = 1
    </select>

</mapper>
