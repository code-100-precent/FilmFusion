<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cxdproject.coder.mapper.LocationMapper">

    <resultMap id="BaseResultMap" type="cn.cxdproject.coder.model.entity.Location">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="type" property="type" />
        <result column="status" property="status" />
        <result column="location_description" property="locationDescription" />
        <result column="contact_phone" property="contactPhone" />
        <result column="contact_name" property="contactName" />
        <result column="address" property="address" />
        <result column="price" property="price" />
        <result column="user_id" property="userId" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="cover" property="cover" />
        <result column="image" property="image" />
    </resultMap>

    <sql id="Base_Column_List">
            `id`,
            `name`,
            `type`,
            `status`,
            `location_description`,
            `contact_phone`,
            `contact_name`,
            `address`,
            `price`,
            `user_id`,
            'cover',
            `deleted`,
            `created_at`,
            `updated_at`,
            'image'
    </sql>

    <select id="getPage" resultType="cn.cxdproject.coder.model.entity.Location">
        SELECT a.id, a.name, a.status, a.type, a.location_description,a.cover,a.address,a.price
        FROM fi_locations a
        INNER JOIN (
        SELECT id
        FROM fi_locations
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{size}
        ) tmp ON a.id = tmp.id
    </select>

</mapper>
