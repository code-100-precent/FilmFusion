<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cxdproject.coder.mapper.ArticleMapper">

    <resultMap id="BaseResultMap" type="cn.cxdproject.coder.model.entity.Article">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="issue_unit" property="issueUnit" />
        <result column="issue_time" property="issueTime" />
        <result column="content" property="content" />
        <result column="user_id" property="userId" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="image" property="image" />
        <result column="thumb_image" property="thumbImage"/>
    </resultMap>

    <sql id="Base_Column_List">
            `id`,
            `title`,
            `issue_unit`,
            `issue_time`,
            `content`,
            `user_id`,
            `deleted`,
            `created_at`,
            `updated_at`,
            'image',
            'thumb_image'
    </sql>

    <select id="selectIds" resultType="long">
        SELECT id
        FROM fi_articles
        <where>
            deleted = 0
            <!-- 模糊搜索 -->
            <if test="keyword != null and keyword != ''">
                AND (
                title LIKE CONCAT('%', #{keyword}, '%')
                OR content LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>

            <if test="lastId != null">
                AND id &lt; #{lastId}
            </if>
        </where>
        ORDER BY id DESC
        LIMIT #{size}
    </select>

    <select id="getAdminPage" resultType="cn.cxdproject.coder.model.entity.Article">
        SELECT *
        FROM fi_articles
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        ORDER BY id ASC
        LIMIT #{offset}, #{size}
    </select>

    <select id="selectLatest10" resultType="cn.cxdproject.coder.model.entity.Article">
        SELECT *
        FROM fi_articles
        WHERE deleted = 0
        ORDER BY id ASC
            LIMIT 10;
    </select>


    <update id="updateArticle">
        UPDATE fi_articles
        <set>
            <if test="dto.title != null and dto.title != ''">
                title = #{dto.title},
            </if>
            <if test="dto.issueTime != null">
                issue_time = #{dto.issueTime},
            </if>
            <if test="dto.issueUnit != null and dto.issueUnit != ''">
                issue_unit = #{dto.issueUnit},
            </if>
            <if test="dto.content != null and dto.content != ''">
                content = #{dto.content},
            </if>
            <if test="dto.image != null and dto.image != ''">
                image = #{dto.image},
            </if>
            <if test="dto.thumbImage != null and dto.thumbImage != ''">
                thumb_image = #{dto.thumbImage},
            </if>
        </set>
        WHERE id = #{articleId}
        AND deleted = false
    </update>


    <select id="getTotal" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM fi_articles
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND title LIKE CONCAT('%', #{keyword}, '%')
        </if>
    </select>
</mapper>
