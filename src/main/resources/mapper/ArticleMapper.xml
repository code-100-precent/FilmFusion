<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cxdproject.coder.mapper.ArticleMapper">

    <resultMap id="BaseResultMap" type="cn.cxdproject.coder.model.entity.Article">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="issue_unit" property="issueUnit" />
        <result column="issue_time" property="issueTime" />
        <result column="content" property="content" />
        <result column="user_id" property="userId" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="cover" property="cover" />
        <result column="image" property="cover" />
    </resultMap>

    <sql id="Base_Column_List">
            `id`,
            `title`,
            `issue_unit`,
            `issue_time`,
            `content`,
            `user_id`,
            `deleted`,
            'cover',
            `created_at`,
            `updated_at`,
            'image'
    </sql>

    <select id="getPage" resultType="cn.cxdproject.coder.model.entity.Article">
        SELECT a.id, a.title, a.issue_unit, a.issue_time, a.user_id, a.cover
        FROM fi_articles a
        INNER JOIN (
        SELECT id
        FROM fi_articles
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        ORDER BY issue_time DESC
        LIMIT #{offset}, #{size}
        ) tmp ON a.id = tmp.id
    </select>

</mapper>
