<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cxdproject.coder.mapper.ShootMapper">

    <resultMap id="BaseResultMap" type="cn.cxdproject.coder.model.entity.Shoot">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="price" property="price" />
        <result column="status" property="status" />
        <result column="address" property="address" />
        <result column="phone" property="phone" />
        <result column="contact_name" property="contactName" />
        <result column="user_id" property="userId" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="image" property="image" />
        <result column="thumb_image" property="thumbImage"/>
    </resultMap>

    <sql id="Base_Column_List">
            `id`,
            `name`,
            `description`,
            `price`,
            `status`,
            `address`,
            `phone`,
            `contact_name`,
            `user_id`,
            `deleted`,
            `created_at`,
            `updated_at`,
            `image`,
            `thumb_image`
    </sql>

    <select id="selectIds" resultType="long">
        SELECT id
        FROM fi_shoots
        <where>
            deleted = 0
            <!-- 模糊搜索 -->
            <if test="keyword != null and keyword != ''">
                AND (
                name LIKE CONCAT('%', #{keyword}, '%')
                OR description LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
            <!-- 升序游标：只查比 lastId 更大的 -->
            <if test="lastId != null">
                AND id > #{lastId}
            </if>
        </where>
        ORDER BY created_at ASC
        LIMIT #{size}
    </select>

    <select id="getAdminPage" resultType="cn.cxdproject.coder.model.entity.Shoot">
        SELECT *
        FROM fi_shoots
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (
            name LIKE CONCAT('%', #{keyword}, '%')
            OR description LIKE CONCAT('%', #{keyword}, '%')
            )
        </if>
        ORDER BY created_at ASC
        LIMIT #{offset}, #{size}
    </select>

    <select id="selectLatest10" resultType="cn.cxdproject.coder.model.entity.Shoot">
        SELECT *
        FROM fi_shoots
        WHERE deleted = 0
        ORDER BY created_at DESC
            LIMIT 10
    </select>

    <update id="updateShoot">
        UPDATE fi_shoots
        <set>
            <if test="dto.name != null and dto.name != ''">
                name = #{dto.name},
            </if>
            <if test="dto.description != null and dto.description != ''">
                description = #{dto.description},
            </if>
            <if test="dto.price != null and dto.price != ''">
                price = #{dto.price},
            </if>
            <if test="dto.status != null">
                status = #{dto.status},
            </if>
            <if test="dto.address != null ">
                address = #{dto.address},
            </if>
            <if test="dto.phone != null">
                phone = #{dto.phone},
            </if>
            <if test="dto.contactName != null">
                contact_name = #{dto.contactName},
            </if>
            <if test="dto.image != null">
                image = #{dto.image},
            </if>
            <if test="dto.thumbImage != null">
                thumb_image = #{dto.thumbImage},
            </if>
        </set>
        WHERE id = #{id}
        AND deleted = 0
    </update>

    <select id="getTotal" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM fi_shoots
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (
            name LIKE CONCAT('%', #{keyword}, '%')
            OR description LIKE CONCAT('%', #{keyword}, '%')
            )
        </if>
    </select>

    <select id="selectAll" resultType="cn.cxdproject.coder.model.entity.Shoot">
        SELECT *
        FROM fi_shoots
        WHERE deleted = 0
    </select>
</mapper>
