<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cxdproject.coder.mapper.ShootMapper">

    <resultMap id="BaseResultMap" type="cn.cxdproject.coder.model.entity.Shoot">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="price" property="price" />
        <result column="status" property="status" />
        <result column="address" property="address" />
        <result column="phone" property="phone" />
        <result column="contact_name" property="contactName" />
        <result column="user_id" property="userId" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="cover" property="cover" />
        <result column="image" property="image" />
        <result column="thumb_cover" property="thumbCover"/>
        <result column="thumb_image" property="thumbImage"/>
    </resultMap>

    <sql id="Base_Column_List">
            `id`,
            `name`,
            `description`,
            `price`,
            `status`,
            `address`,
            `phone`,
            `contact_name`,
            `user_id`,
            'cover',
            `deleted`,
            `created_at`,
            `updated_at`,
            'image',
            'thumb_cover',
            'thumb_image'
    </sql>

    <select id="selectIds" resultType="long">
        SELECT id
        FROM fi_shoots
        <where>
            deleted = 0
            <!-- 模糊搜索 -->
            <if test="keyword != null and keyword != ''">
                AND (
                name LIKE CONCAT('%', #{keyword}, '%')
                OR description LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
            <!-- 升序游标：只查比 lastId 更大的 -->
            <if test="lastId != null">
                AND id &lt; #{lastId}
            </if>
        </where>
        ORDER BY id DESC
        LIMIT #{size}
    </select>

    <select id="getAdminPage" resultType="cn.cxdproject.coder.model.entity.Shoot">
        SELECT *
        FROM fi_shoots
        WHERE deleted = 0
        AND id IN (
        SELECT id
        FROM fi_shoots
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{size}
        )
        ORDER BY created_at DESC
    </select>

    <select id="selectLatest10" resultType="cn.cxdproject.coder.model.entity.Shoot">
        SELECT *
        FROM fi_shoots
        ORDER BY created_at DESC
            LIMIT 10
    </select>

</mapper>
