<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cxdproject.coder.mapper.HotelMapper">

    <resultMap id="BaseResultMap" type="cn.cxdproject.coder.model.entity.Hotel">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="address" property="address" />
        <result column="manager_name" property="managerName" />
        <result column="manager_phone" property="managerPhone" />
        <result column="cover" property="cover" />
        <result column="image" property="image" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <sql id="Base_Column_List">
            `id`,
            `name`,
            `description`,
            `address`,
            `manager_name`,
            `manager_phone`,
            `cover`,
            `image`
            `deleted`,
            `created_at`,
            `updated_at`
    </sql>

    <select id="getPageHotelIds" resultType="java.lang.Long">
        SELECT id
        FROM fi_hotel
        <where>
            <if test="keyword != null and keyword != ''">
                description LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{size}
    </select>

    <select id="countByKeyword" resultType="long">
        SELECT COUNT(*)
        FROM fi_hotel
        <where>
            <if test="keyword != null and keyword != ''">
                description LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
    </select>

    <select id="selectLatest10" resultType="cn.cxdproject.coder.model.entity.Hotel">
        SELECT id, name, description,cover,address
        FROM fi_hotel
        ORDER BY created_time DESC
            LIMIT 10
    </select>

</mapper>