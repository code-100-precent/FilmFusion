<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cxdproject.coder.mapper.HotelMapper">

    <resultMap id="BaseResultMap" type="cn.cxdproject.coder.model.entity.Hotel">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="address" property="address" />
        <result column="manager_name" property="managerName" />
        <result column="manager_phone" property="managerPhone" />
        <result column="cover" property="cover" />
        <result column="image" property="image" />
        <result column="deleted" property="deleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="thumb_cover" property="thumbCover"/>
        <result column="thumb_image" property="thumbImage"/>
        <result column="longitude" property="longitude"/>
        <result column="latitude" property="latitude"/>
    </resultMap>

    <sql id="Base_Column_List">
            `id`,
            `name`,
            `description`,
            `address`,
            `manager_name`,
            `manager_phone`,
            `cover`,
            `image`
            `deleted`,
            `created_at`,
            `updated_at`,
            'thumb_cover',
            'thumb_image',
            'longitude',
            'latitude'
    </sql>

    <select id="selectIds" resultType="long">
        SELECT id
        FROM fi_hotel
        <where>
            deleted = 0
            <!-- 模糊搜索 -->
            <if test="keyword != null and keyword != ''">
                AND (
                name LIKE CONCAT('%', #{keyword}, '%')
                OR description LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>

            <if test="lastId != null">
                AND id &lt; #{lastId}
            </if>
        </where>
        ORDER BY id DESC
        LIMIT #{size}
    </select>

    <select id="getAdminPage" resultType="cn.cxdproject.coder.model.entity.Hotel">
        SELECT *
        FROM fi_hotel
        WHERE deleted = 0
        AND id IN (
        SELECT id
        FROM fi_hotel
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND title LIKE CONCAT('%', #{keyword}, '%')
        </if>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{size}
        )
        ORDER BY created_at DESC
    </select>

    <select id="selectLatest10" resultType="cn.cxdproject.coder.model.entity.Hotel">
        SELECT *
        FROM fi_hotel
        ORDER BY created_time DESC
            LIMIT 10
    </select>

</mapper>